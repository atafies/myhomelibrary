<%= form_for [:admin, @campaign.organization, @campaign], :html => {:class => "form-horizontal"} do |f| %>
  <div style="margin-left:15px;">
    <div class="form-group">
        <div class="col-md-6">
            <%= f.label :name %><br>
            <%= f.text_field :name, :class => 'form-control'%>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-6">
            <%= f.label :deadline %><br>
            <%= f.text_field :deadline, :class => 'form-control' %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-6">
            <%= f.submit 'Submit'.html_safe, :class => 'btn btn-primary' %>
            <%= link_to 'Back', admin_organization_campaigns_url(@campaign.organization), :class => "btn btn-default"%>
        </div>
    </div>
  </div>
<% end %>

