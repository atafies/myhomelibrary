<%= form_for [:admin, @organization], :html => {:class => "form-horizontal"} do |f| %>
<%= f.label :name, class: "control-label" %><br>
<div class="form-group">
  <div class="col-md-8">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>

<%= f.label :contact_name, class: "control-label" %><br>
<div class="form-group row">
  <div class="col-md-8">
    <%= f.text_field :contact_name, class: "form-control" %>
  </div>
</div>

<%= f.label :contact_email, class: "control-label" %><br>
<div class="form-group row">
  <div class="col-md-8">
    <%= f.text_field :contact_email, class: "form-control" %>
  </div>
</div>

<p>
  <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
</p>
<% end %>